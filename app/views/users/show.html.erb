<div class="show">

  <div class="container">
    <header>
      <div class="bio">
        <img src=<%= @user.cover_picture%> alt="background" class="bg">
        <div class="desc">
          <h3>@<%= link_to @user.name, edit_user_path, class: "a_edit_user" %></h3>
          <p><%= @user.bio%></p>
