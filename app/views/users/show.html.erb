          </li>
          <li>
            <%= @user.followers.count %>
            <span>Followers</span>
          </li>
          <li>
            <%= @user.followings.count %>
            <span>Following</span>
          </li>
        </ul>
      </div>
    </div>

    <%= render 'tweets/form', 'tweet': @new_tweet %>
  </div>





